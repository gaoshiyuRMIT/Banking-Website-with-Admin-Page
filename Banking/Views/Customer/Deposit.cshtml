@model DepositViewModel
@{

    ViewData["Title"] = "Deposit";
}

<div class="row">
    <div class="col-md-4">
        <div>
                <h2 class="display-4">Deposit</h2>
                @if (Model.OperationStatus == OperationStatus.Successful)
                {
                    <span class="text-success">Operation is successful!</span>
                }
                <form asp-action="Deposit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AccountType" class="control-label"></label>
                        <select asp-for="AccountType" asp-items="Model.AccountTypes" class="form-control"></select>
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control" value="@Model.Amount.ToString("0.00")" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Deposit" class="btn btn-primary" />
                    </div>
                </form>

            </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}